<div class="container container-center">
  <div class="row justify-content-center">
    <div class="col-8">
      <div class="devise-text-content">
        <div class="devise-text">
          <h1>Hello again!</h1>
          <p>Welcome back you have been missed!</p>
        </div>
      </div>
      <div class="form-container">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <% f.label :email %>
            <%= f.email_field :email, autofocus: true, placeholder: 'email', autocomplete: "email", class: 'form-control mb-3' %>
          </div>

          <div class="field input-group mb-3">
            <% f.label :password %>
            <%= f.password_field :password, placeholder: 'Password' , autocomplete: "current-password", class:'form-control' %>
            <div class="input-group-append">
                <span class="input-group-text h-100" id="basic-addon2"><i class="fa fa-eye-slash" aria-hidden="true"></i></span>
              </div>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="field mb-3">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="actions w-100">
            <%= f.submit "Log in", class: 'w-100 btn-orange mb-3' %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
</div>
